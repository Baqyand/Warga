<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="34dp"
            android:text="@string/profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/status_penghuni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorHint"
                    android:text="-"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="42dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Pribadi"
            android:textColor="@android:color/black"/>

        <RelativeLayout
            android:id="@+id/btn_data_pribadi"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/profile_item_menu_background">
            <RelativeLayout
                android:id="@+id/icon_pribadi"
                android:layout_width="26dp"
                android:layout_centerVertical="true"
                android:layout_height="26dp"
                android:background="@drawable/profile_mini_item_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mini_profile"/>
            </RelativeLayout>
            <TextView
                android:layout_toRightOf="@id/icon_pribadi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="Data Pribadi"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_next"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_info_rumah"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/profile_item_menu_background">
            <RelativeLayout
                android:id="@+id/icon_info_rumah"
                android:layout_width="26dp"
                android:layout_centerVertical="true"
                android:layout_height="26dp"
                android:background="@drawable/profile_mini_item_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mini_rumah"/>
            </RelativeLayout>
            <TextView
                android:layout_toRightOf="@id/icon_info_rumah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="Info Rumah"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_next"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layanan Kami"
            android:textColor="@android:color/black"/>
        <RelativeLayout
            android:id="@+id/btn_bantuan"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/profile_item_menu_background">
            <RelativeLayout
                android:id="@+id/icon_bantuan"
                android:layout_width="26dp"
                android:layout_centerVertical="true"
                android:layout_height="26dp"
                android:background="@drawable/profile_mini_item_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mini_profile"/>
            </RelativeLayout>
            <TextView
                android:layout_toRightOf="@id/icon_bantuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="Bantuan"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_next"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_keluar"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/profile_item_menu_background">
            <RelativeLayout
                android:id="@+id/icon_keluar"
                android:layout_width="26dp"
                android:layout_centerVertical="true"
                android:layout_height="26dp"
                android:background="@drawable/profile_mini_item_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mini_logout"/>
            </RelativeLayout>
            <TextView
                android:layout_toRightOf="@id/icon_keluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="Keluar"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_next"/>
        </RelativeLayout>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>