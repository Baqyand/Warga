<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item> <!-- Affecting Bottom Navigation Bar Text Color -->
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="tabBackground">@drawable/tab_item_selector</item>
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="noTextColorTheme">
        <item name="android:textColor">@null</item>
    </style>
    <style name="defaultTextSize">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorHint</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/card_background</item>
    </style>
</resources>
